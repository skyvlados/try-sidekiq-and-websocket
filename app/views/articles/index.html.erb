<h1>Articles</h1>

<body>
  <table style="border:1px solid black">
    <tr>
      <th>Id </th>
      <th>Title </th>
      <th>Body </th>
    </tr>
  <% @articles.each do |article| %>
    <tr>
      <td>
        <a href="/articles/<%= article.id %>">
          <%= article.id %>
        </a>
      </td>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
    </tr>
  <% end %>
  </table>

  <%= link_to "New Article", new_article_path %>
</body>